<entity-facade-xml type="seed">

    <!--  - mantle.marketing.campaign -->

    <!-- Marketing Campaign Status -->
    <StatusType description="Marketing Campaign" statusTypeId="MarketingCampaign"/>
    <StatusItem description="Planned" sequenceNum="1" statusId="MKTG_CAMP_PLANNED" statusTypeId="MarketingCampaign"/>
    <StatusItem description="Approved" sequenceNum="2" statusId="MKTG_CAMP_APPROVED" statusTypeId="MarketingCampaign"/>
    <StatusItem description="In Progress" sequenceNum="3" statusId="MKTG_CAMP_INPROGRESS" statusTypeId="MarketingCampaign"/>
    <StatusItem description="Completed" sequenceNum="4" statusId="MKTG_CAMP_COMPLETED" statusTypeId="MarketingCampaign"/>
    <StatusItem description="Cancelled" sequenceNum="5" statusId="MKTG_CAMP_CANCELLED" statusTypeId="MarketingCampaign"/>
    <StatusValidChange statusId="MKTG_CAMP_PLANNED" statusIdTo="MKTG_CAMP_APPROVED" transitionName="Approve Marketing Campaign"/>
    <StatusValidChange statusId="MKTG_CAMP_APPROVED" statusIdTo="MKTG_CAMP_INPROGRESS" transitionName="Marketing Campaign In Progress"/>
    <StatusValidChange statusId="MKTG_CAMP_INPROGRESS" statusIdTo="MKTG_CAMP_COMPLETED" transitionName="Complete Marketing Campaign"/>
    <StatusValidChange statusId="MKTG_CAMP_PLANNED" statusIdTo="MKTG_CAMP_CANCELLED" transitionName="Cancel Marketing Campaign"/>
    <StatusValidChange statusId="MKTG_CAMP_APPROVED" statusIdTo="MKTG_CAMP_CANCELLED" transitionName="Cancel Marketing Campaign"/>
    <StatusValidChange statusId="MKTG_CAMP_INPROGRESS" statusIdTo="MKTG_CAMP_CANCELLED" transitionName="Cancel Marketing Campaign"/>


    <!--  - mantle.marketing.contact -->

    <!-- Contact List Type -->
    <EnumerationType description="Contact List Type" enumTypeId="ContactListType"/>
    <Enumeration enumId="MARKETING" description="Marketing" enumTypeId="ContactListType"/>
    <Enumeration enumId="NEWSLETTER" description="Newsletter" enumTypeId="ContactListType"/>
    <Enumeration enumId="ANNOUNCEMENT" description="Announcement" enumTypeId="ContactListType"/>

    <!-- Contact List Party Status -->
    <StatusType description="Contact List Party" statusTypeId="ContactListParty"/>
    <StatusItem description="Pending Acceptance" sequenceNum="1" statusId="CLPT_PENDING" statusTypeId="ContactListParty"/>
    <StatusItem description="Accepted" sequenceNum="2" statusId="CLPT_ACCEPTED" statusTypeId="ContactListParty"/>
    <StatusItem description="Rejected" sequenceNum="3" statusId="CLPT_REJECTED" statusTypeId="ContactListParty"/>
    <StatusItem description="In Use" sequenceNum="4" statusId="CLPT_IN_USE" statusTypeId="ContactListParty"/>
    <StatusItem description="Invalid" sequenceNum="5" statusId="CLPT_INVALID" statusTypeId="ContactListParty"/>
    <StatusItem description="Unsubscription pending" sequenceNum="6" statusId="CLPT_UNSUBS_PENDING" statusTypeId="ContactListParty"/>
    <StatusItem description="Unsubscribed" sequenceNum="7" statusId="CLPT_UNSUBSCRIBED" statusTypeId="ContactListParty"/>
    <StatusValidChange statusId="CLPT_PENDING" statusIdTo="CLPT_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="CLPT_PENDING" statusIdTo="CLPT_REJECTED" transitionName="Reject"/>
    <StatusValidChange statusId="CLPT_ACCEPTED" statusIdTo="CLPT_REJECTED" transitionName="Reject"/>
    <StatusValidChange statusId="CLPT_REJECTED" statusIdTo="CLPT_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="CLPT_REJECTED" statusIdTo="CLPT_PENDING" transitionName="Pending Accept"/>
    <StatusValidChange statusId="CLPT_ACCEPTED" statusIdTo="CLPT_IN_USE" transitionName="Locked - In Use"/>
    <StatusValidChange statusId="CLPT_ACCEPTED" statusIdTo="CLPT_INVALID" transitionName="Invalid"/>
    <StatusValidChange statusId="CLPT_ACCEPTED" statusIdTo="CLPT_UNSUBS_PENDING" transitionName="Subscription Accepted - Unsubscription Pending"/>
    <StatusValidChange statusId="CLPT_PENDING" statusIdTo="CLPT_UNSUBS_PENDING" transitionName="Subscription Pending - Unsubscription Pending"/>
    <StatusValidChange statusId="CLPT_IN_USE" statusIdTo="CLPT_UNSUBS_PENDING" transitionName="Subscription In Use - Unsubscription Pending"/>
    <StatusValidChange statusId="CLPT_INVALID" statusIdTo="CLPT_UNSUBS_PENDING" transitionName="Subscription Invalid - Unsubscription Pending"/>
    <StatusValidChange statusId="CLPT_ACCEPTED" statusIdTo="CLPT_UNSUBSCRIBED" transitionName="Subscription Accepted - Unsubscribed"/>
    <StatusValidChange statusId="CLPT_PENDING" statusIdTo="CLPT_UNSUBSCRIBED" transitionName="Subscription Accepted - Unsubscribed"/>
    <StatusValidChange statusId="CLPT_IN_USE" statusIdTo="CLPT_UNSUBSCRIBED" transitionName="Subscription In Use - Unsubscribed"/>
    <StatusValidChange statusId="CLPT_INVALID" statusIdTo="CLPT_UNSUBSCRIBED" transitionName="Subscription Invalid - Unsubscribed"/>

    <!-- Contact List Email Type -->
    <EnumerationType description="Contact List Email Type" enumTypeId="ContactListEmailType"/>
    <Enumeration description="Unsubscribe Contact List Notification" enumId="CONT_UNSUB_NOT" enumTypeId="ContactListEmailType"/>
    <Enumeration description="Subscribe Contact List Notification" enumId="CONT_SUB_NOT" enumTypeId="ContactListEmailType"/>
    <Enumeration description="Unsubscribe Contact List Verify" enumId="CONT_UNSUB_VER" enumTypeId="ContactListEmailType"/>
    <Enumeration description="Contact List E-mail Template" enumId="CONT_EMAIL_TEMPLATE" enumTypeId="ContactListEmailType"/>

    <!--  - mantle.marketing.segment -->

    <!-- Market Segment Type -->
    <EnumerationType description="Market Segment Type" enumTypeId="MarketSegmentType"/>
    <Enumeration enumId="MARKET_SEGMENT" description="Market Segment" enumTypeId="MarketSegmentType"/>
    <Enumeration enumId="SALES_SEGMENT" description="Sales Segment" enumTypeId="MarketSegmentType"/>

    <!--  - mantle.marketing.tracking -->

    <!-- Tracking Code Type -->
    <EnumerationType description="Tracking Code Type" enumTypeId="TrackingCodeType"/>
    <Enumeration enumId="ACCESS" description="Access Code" enumTypeId="TrackingCodeType"/>
    <Enumeration enumId="INTERNAL" description="Internal" enumTypeId="TrackingCodeType"/>
    <Enumeration enumId="EXTERNAL" description="External" enumTypeId="TrackingCodeType"/>
    <Enumeration enumId="PARTNER_MGD" description="Partner Managed" enumTypeId="TrackingCodeType"/>

    <!-- Tracking Code Source -->
    <EnumerationType description="Tracking Code Source" enumTypeId="TrackingCodeSource"/>
    <Enumeration description="Cookie" enumId="TKCDSRC_COOKIE" enumTypeId="TrackingCodeSource"/>
    <Enumeration description="URL Parameter" enumId="TKCDSRC_URL_PARAM" enumTypeId="TrackingCodeSource"/>

    <!-- Misc data for sales force automation -->

    <!-- Lead Status -->
    <StatusType statusTypeId="LeadStatus" description="Lead Status"/>
    <StatusItem description="Assigned" sequenceNum="1" statusId="LEAD_ASSIGNED" statusTypeId="LeadStatus"/>
    <StatusItem description="Converted" sequenceNum="2" statusId="LEAD_CONVERTED" statusTypeId="LeadStatus"/>
    <StatusItem description="Qualified" sequenceNum="3" statusId="LEAD_QUALIFIED" statusTypeId="LeadStatus"/>
    <StatusValidChange statusId="LEAD_ASSIGNED" statusIdTo="LEAD_CONVERTED" transitionName="Converted"/>
    <StatusValidChange statusId="LEAD_ASSIGNED" statusIdTo="LEAD_QUALIFIED" transitionName="Qualified"/>

    <!-- Lead Sources (DataSourceType) -->
    <Enumeration description="Lead Source" enumId="LEAD_SOURCE" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="OTHER" description="Other" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="COLD_CALL" description="Cold Call" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="EXISTING_CUSTOMER" description="Existing Customer" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="SELF_GENERATED" description="Self Generated" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="EMPLOYEE" description="Employee" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="PARTNER" description="Partner" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="PUBLIC_RELATIONS" description="Public Relations" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="DIRECT_MAIL" description="Direct Mail" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="CONFERENCE" description="Conference" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="TRADE_SHOW" description="Trade Show" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="WEB_SITE" description="Web Site" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="WORD_OF_MOUTH" description="Word of Mouth" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="EMAIL" description="Email" enumTypeId="DataSourceType"/>
    <Enumeration parentEnumId="LEAD_SOURCE" enumId="CAMPAIGN" description="Campaign" enumTypeId="DataSourceType"/>
</entity-facade-xml>
