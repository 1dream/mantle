<entity-facade-xml type="seed">
    <!--  - mantle.product.facility -->

    <!-- Facility Type -->
    <EnumerationType description="Facility Type" enumTypeId="FacilityType"/>
    <Enumeration description="Building" enumId="BUILDING" enumTypeId="FacilityType"/>
    <Enumeration description="Floor" enumId="FLOOR" enumTypeId="FacilityType"/>
    <Enumeration description="Office" enumId="OFFICE" enumTypeId="FacilityType"/>
    <Enumeration description="Call Center" enumId="CALL_CENTER" enumTypeId="FacilityType"/>
    <Enumeration description="Plant" enumId="PLANT" enumTypeId="FacilityType"/>
    <Enumeration description="Room" enumId="ROOM" enumTypeId="FacilityType"/>
    <Enumeration description="Retail Store" enumId="RETAIL_STORE" enumTypeId="FacilityType"/>
    <Enumeration description="Warehouse" enumId="WAREHOUSE" enumTypeId="FacilityType"/>

    <!-- Facility Group Type -->
    <EnumerationType description="Facility Group Type" enumTypeId="FacilityGroupType"/>
    <Enumeration description="Management Structure" enumId="MGMT_STRUCTURE" enumTypeId="FacilityGroupType"/>
    <Enumeration description="Pricing Group" enumId="PRICING_GROUP" enumTypeId="FacilityGroupType"/>

    <!-- Facility Location Type -->
    <EnumerationType description="Facility Location Type" enumTypeId="FacilityLocationType"/>
    <Enumeration description="Pick/Primary" enumId="FLT_PICKLOC" enumTypeId="FacilityLocationType"/>
    <Enumeration description="Bulk" enumId="FLT_BULK" enumTypeId="FacilityLocationType"/>

    <!--  - mantle.product.inventory -->

    <!-- Inventory Item Status -->
    <StatusType description="Inventory Item" statusTypeId="InventoryItem"/>
    <StatusItem description="On Order" sequenceNum="1" statusId="INV_ON_ORDER" statusTypeId="InventoryItem"/>
    <StatusItem description="Available" sequenceNum="2" statusId="INV_AVAILABLE" statusTypeId="InventoryItem"/>
    <StatusItem description="Promised" sequenceNum="3" statusId="INV_PROMISED" statusTypeId="InventoryItem"/>
    <StatusItem description="Delivered" sequenceNum="4" statusId="INV_DELIVERED" statusTypeId="InventoryItem"/>
    <StatusItem description="Activated" sequenceNum="5" statusId="INV_ACTIVATED" statusTypeId="InventoryItem"/>
    <StatusItem description="Deactivated" sequenceNum="6" statusId="INV_DEACTIVATED" statusTypeId="InventoryItem"/>
    <StatusItem description="On Hold" sequenceNum="7" statusId="INV_ON_HOLD" statusTypeId="InventoryItem"/>
    <StatusItem description="Being Transferred" sequenceNum="10" statusId="INV_BEING_TRANS" statusTypeId="InventoryItem"/>
    <StatusItem description="Being Transferred (Promised)" sequenceNum="11" statusId="INV_BEING_TRANS_PRM" statusTypeId="InventoryItem"/>
    <StatusItem description="Returned" sequenceNum="20" statusId="INV_RETURNED" statusTypeId="InventoryItem"/>
    <StatusItem description="Defective" sequenceNum="21" statusId="INV_DEFECTIVE" statusTypeId="InventoryItem"/>
    <StatusValidChange statusId="INV_ON_ORDER" statusIdTo="INV_AVAILABLE" transitionName="Order Arrived"/>
    <StatusValidChange statusId="INV_AVAILABLE" statusIdTo="INV_PROMISED" transitionName="Promise"/>
    <StatusValidChange statusId="INV_AVAILABLE" statusIdTo="INV_ON_HOLD" transitionName="Hold"/>
    <StatusValidChange statusId="INV_AVAILABLE" statusIdTo="INV_DEFECTIVE" transitionName="Mark As Defective"/>
    <StatusValidChange statusId="INV_AVAILABLE" statusIdTo="INV_BEING_TRANS" transitionName="Being Transfered"/>
    <StatusValidChange statusId="INV_ON_HOLD" statusIdTo="INV_AVAILABLE" transitionName="Release Hold"/>
    <StatusValidChange statusId="INV_ON_HOLD" statusIdTo="INV_DEFECTIVE" transitionName="Mark Held Defective"/>
    <StatusValidChange statusId="INV_BEING_TRANS" statusIdTo="INV_AVAILABLE" transitionName="Transfer Complete"/>
    <StatusValidChange statusId="INV_PROMISED" statusIdTo="INV_AVAILABLE" transitionName="Cancel Promise"/>
    <StatusValidChange statusId="INV_PROMISED" statusIdTo="INV_DELIVERED" transitionName="Deliver"/>
    <StatusValidChange statusId="INV_PROMISED" statusIdTo="INV_DEFECTIVE" transitionName="Mark As Defective"/>
    <StatusValidChange statusId="INV_PROMISED" statusIdTo="INV_BEING_TRANS_PRM" transitionName="Being Transfered (Promised)"/>
    <StatusValidChange statusId="INV_BEING_TRANS_PRM" statusIdTo="INV_PROMISED" transitionName="Transfer Complete (Promised)"/>
    <StatusValidChange statusId="INV_DELIVERED" statusIdTo="INV_RETURNED" transitionName="Return Status Pending"/>
    <StatusValidChange statusId="INV_RETURNED" statusIdTo="INV_AVAILABLE" transitionName="Make Return Available"/>
    <StatusValidChange statusId="INV_RETURNED" statusIdTo="INV_ON_HOLD" transitionName="Make Return Held"/>
    <StatusValidChange statusId="INV_RETURNED" statusIdTo="INV_DEFECTIVE" transitionName="Mark Return Defective"/>
    <StatusValidChange statusId="INV_DELIVERED" statusIdTo="INV_ACTIVATED" transitionName="Activate"/>
    <StatusValidChange statusId="INV_ACTIVATED" statusIdTo="INV_DEACTIVATED" transitionName="Deactivate"/>
    <StatusValidChange statusId="INV_ACTIVATED" statusIdTo="INV_RETURNED" transitionName="Return Status Pending"/>
    <StatusValidChange statusId="INV_DEACTIVATED" statusIdTo="INV_ON_HOLD" transitionName="Hold Inactive"/>
    <StatusValidChange statusId="INV_DEACTIVATED" statusIdTo="INV_RETURNED" transitionName="Return Inactive"/>

    <!-- Inventory Transfer Status -->
    <StatusType description="Inventory Transfer" statusTypeId="InventoryTransfer"/>
    <StatusItem description="Requested" sequenceNum="1" statusId="IXF_REQUESTED" statusTypeId="InventoryTransfer"/>
    <StatusItem description="Scheduled" sequenceNum="2" statusId="IXF_SCHEDULED" statusTypeId="InventoryTransfer"/>
    <StatusItem description="En-Route" sequenceNum="3" statusId="IXF_EN_ROUTE" statusTypeId="InventoryTransfer"/>
    <StatusItem description="Complete" sequenceNum="4" statusId="IXF_COMPLETE" statusTypeId="InventoryTransfer"/>
    <StatusItem description="Cancelled" sequenceNum="99" statusId="IXF_CANCELLED" statusTypeId="InventoryTransfer"/>
    <StatusValidChange statusId="IXF_REQUESTED" statusIdTo="IXF_SCHEDULED" transitionName="Inventory Request Scheduled"/>
    <StatusValidChange statusId="IXF_REQUESTED" statusIdTo="IXF_EN_ROUTE" transitionName="Inventory Request In Route"/>
    <StatusValidChange statusId="IXF_REQUESTED" statusIdTo="IXF_COMPLETE" transitionName="Inventory Request Completed"/>
    <StatusValidChange statusId="IXF_REQUESTED" statusIdTo="IXF_CANCELLED" transitionName="Inventory Request Cancelled"/>
    <StatusValidChange statusId="IXF_SCHEDULED" statusIdTo="IXF_EN_ROUTE" transitionName="Scheduled Inventory In Route"/>
    <StatusValidChange statusId="IXF_SCHEDULED" statusIdTo="IXF_COMPLETE" transitionName="Scheduled Inventory Completed"/>
    <StatusValidChange statusId="IXF_SCHEDULED" statusIdTo="IXF_CANCELLED" transitionName="Scheduled Inventory Cancelled"/>
    <StatusValidChange statusId="IXF_EN_ROUTE" statusIdTo="IXF_COMPLETE" transitionName="In Route Transfer Completed"/>

    <!-- Inventory Variance Reason -->
    <EnumerationType description="Inventory Variance Reason" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_LOST" description="Lost" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_STOLEN" description="Stolen" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_FOUND" description="Found" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_DAMAGED" description="Damaged" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_INTEGR" description="Integration" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_SAMPLE" description="Sample (Giveaway)" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_MISSHIP_ORDERED" description="Mis-shipped Item Ordered (+)" enumTypeId="InventoryVarianceReason"/>
    <Enumeration enumId="VAR_MISSHIP_SHIPPED" description="Mis-shipped Item Shipped (-)" enumTypeId="InventoryVarianceReason"/>

    <!--  - mantle.product.supplier -->

    <!-- Supplier Preferred Order -->
    <EnumerationType description="Supplier Preferred Order" enumTypeId="SupplierPreferredOrder"/>
    <Enumeration enumId="MAIN_SUPPL" sequenceNum="1" description="Main Supplier" enumTypeId="SupplierPreferredOrder"/>
    <Enumeration enumId="ALT_SUPPL" sequenceNum="2" description="Alternate Supplier" enumTypeId="SupplierPreferredOrder"/>
</entity-facade-xml>
