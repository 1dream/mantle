<entity-facade-xml type="seed">
    <!-- Product Store Category Type -->
    <EnumerationType description="Product Store Category Type" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Browse Root (One)" enumId="PSCT_BROWSE_ROOT" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Default Search (One)" enumId="PSCT_SEARCH" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Quick Add (Many)" enumId="PSCT_QUICK_ADD" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Promotions (One)" enumId="PSCT_PROMOTIONS" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="View Allow (One)" enumId="PSCT_VIEW_ALLW" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Purchase Allow (One)" enumId="PSCT_PURCH_ALLW" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Admin Allow (One)" enumId="PSCT_ADMIN_ALLW" enumTypeId="ProductStoreCategoryType"/>
    <Enumeration description="Ebay Root (One)" enumId="PSCT_EBAY_ROOT" enumTypeId="ProductStoreCategoryType"/>

    <!-- Product Store Email Type -->
    <EnumerationType description="Product Store Email Notification" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Registration" enumId="PSET_CUST_REGISTER" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Confirmation" enumId="PSET_ODR_CONFIRM" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Complete" enumId="PSET_ODR_COMPLETE" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Back-Order" enumId="PSET_ODR_BACKORDER" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Order Change" enumId="PSET_ODR_CHANGE" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Payment Retry" enumId="PSET_ODR_PAYRETRY" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Return Accepted" enumId="PSET_RTN_ACCEPT" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Return Completed" enumId="PSET_RTN_COMPLETE" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Return Cancelled" enumId="PSET_RTN_CANCEL" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Retrieve Password" enumId="PSET_PWD_RETRIEVE" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Tell-A-Friend" enumId="PSET_TELL_FRIEND" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Gift-Card Purchase" enumId="PSET_GC_PURCHASE" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Gift-Card Reload" enumId="PSET_GC_RELOAD" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Quote Created" enumId="PSET_QUO_CREATED" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Quote Confirmation" enumId="PSET_QUO_CONFIRM" enumTypeId="ProductStoreEmailType"/>
    <Enumeration description="Shipment Complete" enumId="PSET_ODR_SHIP_COMPLT" enumTypeId="ProductStoreEmailType"/>

    <!-- Inventory Reservation Order -->
    <EnumerationType description="Inventory Reservation Order" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="FIFO Receive" enumId="INVRO_FIFO_REC" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="LIFO Receive" enumId="INVRO_LIFO_REC" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="FIFO Expire" enumId="INVRO_FIFO_EXP" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="LIFO Expire" enumId="INVRO_LIFO_EXP" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="Greatest Unit Cost" enumId="INVRO_GUNIT_COST" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="Lowest Unit Cost" enumId="INVRO_LUNIT_COST" enumTypeId="InventoryReservationOrder"/>
    <Enumeration description="No Reservation" enumId="INVRO_NO_RES" enumTypeId="InventoryReservationOrder"/>

    <!-- Product Requirement Method -->
    <EnumerationType description="Product Requirement Method" enumTypeId="RequirementMethod"/>
    <!-- NONE: no requirement is created (default) -->
    <Enumeration description="No Requirement Created" enumId="PRODRQM_NONE" enumTypeId="RequirementMethod"/>
    <!-- AUTO: a requirement is created every time a sales order is entered; This is useful to implement cross-dock shipping processes -->
    <Enumeration description="Automatic For Every Sales Order" enumId="PRODRQM_AUTO" enumTypeId="RequirementMethod"/>
    <!-- STOCK: a requirement is created when qoh reaches the minimum stock quantity (from ProductFacility) -->
    <Enumeration description="When QOH Reaches Minimum Stock for Product-Facility" enumId="PRODRQM_STOCK_QOH" enumTypeId="RequirementMethod"/>
    <!-- STOCK_ATP: a requirement is created when atp reaches the minimum stock quantity (from ProductFacility) -->
    <Enumeration description="When ATP Reaches Minimum Stock for Product-Facility" enumId="PRODRQM_STOCK_ATP" enumTypeId="RequirementMethod"/>
    <!-- PRODRQM_DS: a drop ship group is created to trigger automatic creation of a purchase order (drop shipment) every time a sales order is created-->
    <Enumeration description="Drop-ship only" enumId="PRODRQM_DS" enumTypeId="RequirementMethod"/>
    <!-- PRODRQM_DSQOH: auto drop ship on low quantity on hand -->
    <Enumeration description="Auto drop-ship on low quantity" enumId="PRODRQM_DSATP" enumTypeId="RequirementMethod"/>
</entity-facade-xml>
