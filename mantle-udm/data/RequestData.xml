<entity-facade-xml type="seed">

    <!--  - mantle.request.request -->

    <!-- Request Type -->
    <EnumerationType description="Request Type" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_BUGFIX" description="Request For Bug Fix" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_CATALOG" description="Request For Catalog" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_FEATURE" description="Request For Feature" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_INFO" description="Request For Information" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_PROPOSAL" description="Request For Proposal" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_QUOTE" description="Request For Quote" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_SUPPORT" description="Request For Support" enumTypeId="RequestType"/>
    <Enumeration enumId="RF_PUR_QUOTE" description="Request For Purchase Quote" enumTypeId="RequestType"/>

    <!-- Request Status -->
    <StatusType description="Request Status" statusTypeId="Request"/>
    <StatusItem description="Draft" sequenceNum="0" statusId="REQUEST_DRAFT" statusTypeId="Request"/>
    <StatusItem description="Submitted" sequenceNum="1" statusId="REQUEST_SUBMITTED" statusTypeId="Request"/>
    <StatusItem description="Accepted" sequenceNum="2" statusId="REQUEST_ACCEPTED" statusTypeId="Request"/>
    <StatusItem description="Reviewed" sequenceNum="3" statusId="REQUEST_REVIEWED" statusTypeId="Request"/>
    <StatusItem description="Pending Cust." sequenceNum="9" statusId="REQUEST_PENDING" statusTypeId="Request"/>
    <StatusItem description="Completed" sequenceNum="4" statusId="REQUEST_COMPLETED" statusTypeId="Request"/>
    <StatusItem description="Rejected" sequenceNum="98" statusId="REQUEST_REJECTED" statusTypeId="Request"/>
    <StatusItem description="Cancelled" sequenceNum="99" statusId="REQUEST_CANCELLED" statusTypeId="Request"/>
    <StatusValidChange statusId="REQUEST_DRAFT" statusIdTo="REQUEST_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="REQUEST_DRAFT" statusIdTo="REQUEST_SUBMITTED" transitionName="Submit"/>
    <StatusValidChange statusId="REQUEST_DRAFT" statusIdTo="REQUEST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="REQUEST_SUBMITTED" statusIdTo="REQUEST_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="REQUEST_SUBMITTED" statusIdTo="REQUEST_COMPLETED" transitionName="Complete"/>
    <StatusValidChange statusId="REQUEST_SUBMITTED" statusIdTo="REQUEST_REJECTED" transitionName="Reject"/>
    <StatusValidChange statusId="REQUEST_SUBMITTED" statusIdTo="REQUEST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="REQUEST_SUBMITTED" statusIdTo="REQUEST_PENDING" transitionName="Pending customer"/>
    <StatusValidChange statusId="REQUEST_PENDING" statusIdTo="REQUEST_SUBMITTED" transitionName="Submit"/>
    <StatusValidChange statusId="REQUEST_PENDING" statusIdTo="REQUEST_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="REQUEST_PENDING" statusIdTo="REQUEST_REVIEWED" transitionName="Review"/>
    <StatusValidChange statusId="REQUEST_PENDING" statusIdTo="REQUEST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="REQUEST_ACCEPTED" statusIdTo="REQUEST_REVIEWED" transitionName="Review"/>
    <StatusValidChange statusId="REQUEST_ACCEPTED" statusIdTo="REQUEST_COMPLETED" transitionName="Complete"/>
    <StatusValidChange statusId="REQUEST_ACCEPTED" statusIdTo="REQUEST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="REQUEST_ACCEPTED" statusIdTo="REQUEST_PENDING" transitionName="Pending Customer"/>
    <StatusValidChange statusId="REQUEST_REVIEWED" statusIdTo="REQUEST_COMPLETED" transitionName="Complete"/>
    <StatusValidChange statusId="REQUEST_REVIEWED" statusIdTo="REQUEST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="REQUEST_REVIEWED" statusIdTo="REQUEST_PENDING" transitionName="Pending Customer"/>
    <StatusValidChange statusId="REQUEST_COMPLETED" statusIdTo="REQUEST_REVIEWED" transitionName="Re-open"/>

    <!-- Request Resolution -->
    <EnumerationType description="Request Resolution" enumTypeId="RequestResolution"/>
    <Enumeration enumId="FIXED" description="Fixed" enumTypeId="RequestResolution"/>
    <Enumeration enumId="CANTREP" description="Can't Reproduce" enumTypeId="RequestResolution"/>
    <Enumeration enumId="WONTFIX" description="Won't Fix" enumTypeId="RequestResolution"/>
    <Enumeration enumId="DUPLICATE" description="Duplicate" enumTypeId="RequestResolution"/>
    <Enumeration enumId="REJECTED" description="Rejected" enumTypeId="RequestResolution"/>
    <Enumeration enumId="IMPLEMENTED" description="Implemented" enumTypeId="RequestResolution"/>

    <!--  - mantle.request.requirement -->

    <!-- Requirement Type -->
    <EnumerationType description="Requirement Type" enumTypeId="RequirementType"/>
    <Enumeration description="Customer" enumId="CUSTOMER_REQUIREMENT" enumTypeId="RequirementType"/>
    <Enumeration description="Internal" enumId="INTERNAL_REQUIREMENT" enumTypeId="RequirementType"/>
    <Enumeration description="Product" enumId="PRODUCT_REQUIREMENT" enumTypeId="RequirementType"/>
    <Enumeration description="Work" enumId="WORK_REQUIREMENT" enumTypeId="RequirementType"/>

    <!-- Requirement Status -->
    <StatusType description="Requirement Status" statusTypeId="Requirement"/>
    <StatusItem description="Proposed" sequenceNum="1" statusId="REQRMNT_PROPOSED" statusTypeId="Requirement"/>
    <StatusItem description="Created" sequenceNum="2" statusId="REQRMNT_CREATED" statusTypeId="Requirement"/>
    <StatusItem description="Approved" sequenceNum="3" statusId="REQRMNT_APPROVED" statusTypeId="Requirement"/>
    <StatusItem description="Ordered" sequenceNum="4" statusId="REQRMNT_ORDERED" statusTypeId="Requirement"/>
    <StatusItem description="Rejected" sequenceNum="9" statusId="REQRMNT_REJECTED" statusTypeId="Requirement"/>
    <StatusValidChange statusId="REQRMNT_PROPOSED" statusIdTo="REQRMNT_APPROVED" transitionName="Accept"/>
    <StatusValidChange statusId="REQRMNT_PROPOSED" statusIdTo="REQRMNT_REJECTED" transitionName="Reject"/>
    <StatusValidChange statusId="REQRMNT_CREATED" statusIdTo="REQRMNT_APPROVED" transitionName="Accept"/>
    <StatusValidChange statusId="REQRMNT_CREATED" statusIdTo="REQRMNT_REJECTED" transitionName="Reject"/>
    <StatusValidChange statusId="REQRMNT_APPROVED" statusIdTo="REQRMNT_ORDERED" transitionName="Order"/>
    <StatusValidChange statusId="REQRMNT_APPROVED" statusIdTo="REQRMNT_REJECTED" transitionName="Reject"/>

    <!-- Work Requirement Fulfillment Type -->
    <EnumerationType description="Work Requirement Fulfillment Type" enumTypeId="WorkRequirementFulfillmentType"/>
    <Enumeration description="Implements" enumId="WRF_IMPLEMENTS" enumTypeId="WorkRequirementFulfillmentType"/>
    <Enumeration description="Fixes" enumId="WRF_FIXES" enumTypeId="WorkRequirementFulfillmentType"/>
    <Enumeration description="Deploys" enumId="WRF_DEPLOYS" enumTypeId="WorkRequirementFulfillmentType"/>
    <Enumeration description="Tests" enumId="WRF_TESTS" enumTypeId="WorkRequirementFulfillmentType"/>
    <Enumeration description="Delivers" enumId="WRF_DELIVERS" enumTypeId="WorkRequirementFulfillmentType"/>
</entity-facade-xml>
