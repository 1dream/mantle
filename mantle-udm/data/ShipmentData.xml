<entity-facade-xml type="seed">

    <!--  - mantle.shipment.carrier -->

    <Party partyId="_NA_" partyTypeId="PERSON"/>
    <Person partyId="_NA_"/>
    <PartyRole partyId="_NA_" roleTypeId="CARRIER"/>

    <!-- Shipment Method -->
    <EnumerationType description="Shipment Method" enumTypeId="ShipmentMethod"/>
    <Enumeration description="No Shipping" enumId="NO_SHIPPING" enumTypeId="ShipmentMethod"/>

    <CarrierShipmentMethod partyId="_NA_" shipmentMethodEnumId="NO_SHIPPING" sequenceNum="0"/>

    <!--  - mantle.shipment.picklist -->

    <!-- Picklist Status -->
    <StatusType description="Picklist Status" statusTypeId="Picklist"/>
    <StatusItem description="Input" sequenceNum="1" statusId="PICKLIST_INPUT" statusTypeId="Picklist"/>
    <StatusItem description="Assigned" sequenceNum="2" statusId="PICKLIST_ASSIGNED" statusTypeId="Picklist"/>
    <StatusItem description="Printed" sequenceNum="3" statusId="PICKLIST_PRINTED" statusTypeId="Picklist"/>
    <StatusItem description="Picked" sequenceNum="10" statusId="PICKLIST_PICKED" statusTypeId="Picklist"/>
    <StatusItem description="Cancelled" sequenceNum="99" statusId="PICKLIST_CANCELLED" statusTypeId="Picklist"/>
    <StatusValidChange statusId="PICKLIST_INPUT" statusIdTo="PICKLIST_ASSIGNED" transitionName="Assign"/>
    <StatusValidChange statusId="PICKLIST_INPUT" statusIdTo="PICKLIST_PRINTED" transitionName="Print"/>
    <StatusValidChange statusId="PICKLIST_INPUT" statusIdTo="PICKLIST_PICKED" transitionName="Pick"/>
    <StatusValidChange statusId="PICKLIST_INPUT" statusIdTo="PICKLIST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="PICKLIST_ASSIGNED" statusIdTo="PICKLIST_PICKED" transitionName="Pick"/>
    <StatusValidChange statusId="PICKLIST_ASSIGNED" statusIdTo="PICKLIST_PRINTED" transitionName="Print"/>
    <StatusValidChange statusId="PICKLIST_ASSIGNED" statusIdTo="PICKLIST_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="PICKLIST_PRINTED" statusIdTo="PICKLIST_PICKED" transitionName="Pick"/>
    <StatusValidChange statusId="PICKLIST_PRINTED" statusIdTo="PICKLIST_CANCELLED" transitionName="Cancel"/>

    <!-- Picklist Item Status -->
    <StatusType description="Picklist Bin Item Status" statusTypeId="PicklistBinItem"/>
    <StatusItem description="Pending" sequenceNum="1" statusId="PICKITEM_PENDING" statusTypeId="PicklistBinItem"/>
    <StatusItem description="Completed" sequenceNum="50" statusId="PICKITEM_COMPLETED" statusTypeId="PicklistBinItem"/>
    <StatusItem description="Cancelled" sequenceNum="99" statusId="PICKITEM_CANCELLED" statusTypeId="PicklistBinItem"/>
    <StatusValidChange statusId="PICKITEM_PENDING" statusIdTo="PICKITEM_COMPLETED" transitionName="Complete"/>
    <StatusValidChange statusId="PICKITEM_PENDING" statusIdTo="PICKITEM_CANCELLED" transitionName="Cancel"/>

    <!--  - mantle.shipment.receipt -->

    <EnumerationType description="Rejection Reason" enumTypeId="RejectionReason"/>
    <Enumeration enumId="SRJ_DAMAGED" description="Damaged" enumTypeId="RejectionReason"/>
    <Enumeration enumId="SRJ_NOT_ORDERED" description="Not Ordered" enumTypeId="RejectionReason"/>
    <Enumeration enumId="SRJ_OVER_SHIPPED" description="Over Shipped" enumTypeId="RejectionReason"/>

    <!--  - mantle.shipment.shipment -->

    <!-- Shipment Type -->
    <EnumerationType description="Shipment Type" enumTypeId="ShipmentType"/>
    <Enumeration description="Incoming" enumId="INCOMING_SHIPMENT" enumTypeId="ShipmentType"/>
    <Enumeration description="Outgoing" enumId="OUTGOING_SHIPMENT" enumTypeId="ShipmentType"/>
    <Enumeration description="Sales Return" parentEnumId="INCOMING_SHIPMENT" enumId="SALES_RETURN" enumTypeId="ShipmentType"/>
    <Enumeration description="Sales Shipment" parentEnumId="OUTGOING_SHIPMENT" enumId="SALES_SHIPMENT" enumTypeId="ShipmentType"/>
    <Enumeration description="Purchase Shipment" parentEnumId="INCOMING_SHIPMENT" enumId="PURCHASE_SHIPMENT" enumTypeId="ShipmentType"/>
    <Enumeration description="Purchase Return" parentEnumId="OUTGOING_SHIPMENT" enumId="PURCHASE_RETURN" enumTypeId="ShipmentType"/>
    <Enumeration description="Drop Shipment" enumId="DROP_SHIPMENT" enumTypeId="ShipmentType"/>
    <Enumeration description="Transfer" enumId="TRANSFER" enumTypeId="ShipmentType"/>

    <!-- Shipment Status -->
    <StatusType description="Shipment Status" statusTypeId="Shipment"/>
    <StatusItem description="Input" sequenceNum="1" statusId="SHIPMENT_INPUT" statusTypeId="Shipment"/>
    <StatusItem description="Scheduled" sequenceNum="2" statusId="SHIPMENT_SCHEDULED" statusTypeId="Shipment"/>
    <StatusItem description="Picked" sequenceNum="3" statusId="SHIPMENT_PICKED" statusTypeId="Shipment"/>
    <StatusItem description="Packed" sequenceNum="4" statusId="SHIPMENT_PACKED" statusTypeId="Shipment"/>
    <StatusItem description="Shipped" sequenceNum="5" statusId="SHIPMENT_SHIPPED" statusTypeId="Shipment"/>
    <StatusItem description="Delivered" sequenceNum="6" statusId="SHIPMENT_DELIVERED" statusTypeId="Shipment"/>
    <StatusItem description="Cancelled" sequenceNum="99" statusId="SHIPMENT_CANCELLED" statusTypeId="Shipment"/>
    <StatusValidChange statusId="SHIPMENT_INPUT" statusIdTo="SHIPMENT_SCHEDULED" transitionName="Schedule"/>
    <StatusValidChange statusId="SHIPMENT_INPUT" statusIdTo="SHIPMENT_PICKED" transitionName="Pick"/>
    <StatusValidChange statusId="SHIPMENT_INPUT" statusIdTo="SHIPMENT_PACKED" transitionName="Pack"/>
    <StatusValidChange statusId="SHIPMENT_SCHEDULED" statusIdTo="SHIPMENT_PICKED" transitionName="Pick"/>
    <StatusValidChange statusId="SHIPMENT_SCHEDULED" statusIdTo="SHIPMENT_PACKED" transitionName="Pack"/>
    <StatusValidChange statusId="SHIPMENT_PICKED" statusIdTo="SHIPMENT_PACKED" transitionName="Pack"/>
    <StatusValidChange statusId="SHIPMENT_INPUT" statusIdTo="SHIPMENT_SHIPPED" transitionName="Ship"/>
    <StatusValidChange statusId="SHIPMENT_PACKED" statusIdTo="SHIPMENT_SHIPPED" transitionName="Ship"/>
    <StatusValidChange statusId="SHIPMENT_SHIPPED" statusIdTo="SHIPMENT_DELIVERED" transitionName="Deliver"/>
    <StatusValidChange statusId="SHIPMENT_INPUT" statusIdTo="SHIPMENT_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="SHIPMENT_SCHEDULED" statusIdTo="SHIPMENT_CANCELLED" transitionName="Cancel"/>
    <StatusValidChange statusId="SHIPMENT_PICKED" statusIdTo="SHIPMENT_CANCELLED" transitionName="Cancel"/>

    <!-- Shipment Route Segment Status -->
    <StatusType description="Shipment Route Segment Status" hasTable="N" parentTypeId="" statusTypeId="ShipmentRouteSegment"/>
    <StatusItem description="Not Started" sequenceId="01" statusId="SHRSCS_NOT_STARTED" statusTypeId="ShipmentRouteSegment"/>
    <StatusItem description="Confirmed" sequenceId="02" statusId="SHRSCS_CONFIRMED" statusTypeId="ShipmentRouteSegment"/>
    <StatusItem description="Accepted" sequenceId="03" statusId="SHRSCS_ACCEPTED" statusTypeId="ShipmentRouteSegment"/>
    <StatusItem description="Voided" sequenceId="08" statusId="SHRSCS_VOIDED" statusTypeId="ShipmentRouteSegment"/>
    <StatusValidChange statusId="SHRSCS_NOT_STARTED" statusIdTo="SHRSCS_CONFIRMED" transitionName="Confirm"/>
    <StatusValidChange statusId="SHRSCS_CONFIRMED" statusIdTo="SHRSCS_ACCEPTED" transitionName="Accept"/>
    <StatusValidChange statusId="SHRSCS_CONFIRMED" statusIdTo="SHRSCS_VOIDED" transitionName="Void"/>
    <StatusValidChange statusId="SHRSCS_ACCEPTED" statusIdTo="SHRSCS_VOIDED" transitionName="Void"/>
</entity-facade-xml>
