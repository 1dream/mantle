<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-1.0.xsd">
    <!-- ========================================================= -->
    <!--  - mantle.accounting.account.billing -->
    <!--  - mantle.accounting.account.financial -->
    <!--  - mantle.accounting.account.invoice -->
    <!--  - mantle.accounting.account.method -->
