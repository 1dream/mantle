        <field name="numberUomId" type="id"/>
        <field name="defaultAmount" type="currency-amount"/>
        <field name="defaultSequenceNum" type="number-integer"/>
        <field name="abbrev" type="id"/>
        <field name="idCode" type="id-long"/>
