            <key-map field-name="fromProductFeatureId"/>
        </relationship>
        <relationship type="one" title="To" related-entity-name="ProductFeature">
            <key-map field-name="toProductFeatureId"/>
        </relationship>
    </entity>

    <!-- ========================================================= -->
    <!-- mantle.product.price -->
    <!-- ========================================================= -->

    <entity entity-name="ProductPrice" package-name="mantle.product.price">
        <field name="productPriceId" type="id" is-pk="true"/>
        <field name="productId" type="id"/>
        <field name="priceTypeEnumId" type="id"/>
        <field name="pricePurposeEnumId" type="id"/>
        <field name="currencyUomId" type="id"/>
        <field name="fromDate" type="date-time"/>
        <field name="thruDate" type="date-time"/>
        <field name="fromQuantity" type="number-decimal"/>
        <field name="thruQuantity" type="number-decimal"/>
        <field name="price" type="currency-precise" enable-audit-log="true"/>
        <field name="termUomId" type="id">
            <description>For recurring and usage prices to specify a time/freq measure, or a usage unit measure (bits, minutes, etc).</description>
        </field>
        <field name="taxAmount" type="currency-precise"/>
        <field name="taxPercentage" type="number-decimal"/>
        <field name="taxAuthPartyId" type="id"/>
        <field name="taxAuthGeoId" type="id"/>
        <field name="taxInPrice" type="text-indicator">
            <description>If Y the price field has tax included for the given taxAuthPartyId/taxAuthGeoId at the taxPercentage.</description>
        </field>
        <relationship type="one" related-entity-name="Product"/>
        <relationship type="one" title="ProductPriceType" related-entity-name="Enumeration">
            <key-map field-name="priceTypeEnumId"/>
        </relationship>
        <relationship type="one" title="ProductPricePurpose" related-entity-name="Enumeration">
            <key-map field-name="pricePurposeEnumId"/>
        </relationship>
        <relationship type="one" title="Currency" related-entity-name="Uom">
            <key-map field-name="currencyUomId"/>
        </relationship>
        <relationship type="one" title="Term" related-entity-name="Uom"><key-map field-name="termUomId"/></relationship>
        <relationship type="one" related-entity-name="ProductStoreGroup"/>
        <relationship type="one" title="TaxAuthority" related-entity-name="Party">
            <key-map field-name="taxAuthPartyId"/>
        </relationship>
        <relationship type="one" title="TaxAuthority" related-entity-name="Geo">
            <key-map field-name="taxAuthGeoId"/>
        </relationship>
        <index name="PRD_PRC_GENLKP">
            <index-field name="productId"/>
            <index-field name="productPricePurposeId"/>
            <index-field name="currencyUomId"/>
        </index>
    </entity>

    <!-- ========================================================= -->
    <!-- mantle.product.product -->
    <!-- ========================================================= -->

    <entity entity-name="Product" package-name="mantle.product.product">
        <field name="productId" type="id" is-pk="true"/>
        <field name="productTypeEnumId" type="id"/>

        <field name="productName" type="text-medium"/>
        <field name="description" type="text-long"/>
        <field name="comments" type="text-long"/>

        <field name="salesIntroductionDate" type="date-time"/>
        <field name="salesDiscontinuationDate" type="date-time"/>
        <field name="salesDiscWhenNotAvail" type="text-indicator"/>
        <field name="supportDiscontinuationDate" type="date-time"/>

        <field name="requireInventory" type="text-indicator"/>
        <field name="requirementMethodEnumId" type="id"/>
        <field name="taxable" type="text-indicator"/>
        <field name="chargeShipping" type="text-indicator"/>
        <field name="inShippingBox" type="text-indicator"/>
        <field name="defaultShipmentBoxTypeId" type="id"/>
        <field name="returnable" type="text-indicator"/>

        <field name="requireAmount" type="text-indicator"/>
        <field name="amountUomTypeId" type="id"/>
        <field name="fixedAmount" type="currency-amount"><description>For products which are sold in fixed denominations, such as gift certificates or calling cards.</description></field>

        <field name="originGeoId" type="id"/>
        <field name="billOfMaterialLevel" type="number-integer"/>

        <relationship type="one" title="ProductType" related-entity-name="Enumeration">
            <key-map field-name="productTypeEnumId"/>
        </relationship>
        <relationship type="one" title="RequirementMethod" related-entity-name="Enumeration">
            <key-map field-name="requirementMethodEnumId"/>
        </relationship>
        <relationship type="one" title="Origin" related-entity-name="Geo">
            <key-map field-name="originGeoId"/>
        </relationship>
        <relationship type="one" title="Default" related-entity-name="ShipmentBoxType">
            <key-map field-name="defaultShipmentBoxTypeId"/>
        </relationship>
    </entity>
    <entity entity-name="ProductAssoc" package-name="mantle.product.product">
        <field name="productAssocId" type="id" is-pk="true"/>
        <field name="productId" type="id"/>
        <field name="toProductId" type="id"/>
        <field name="productAssocTypeId" type="id"/>
        <field name="fromDate" type="date-time"/>
        <field name="thruDate" type="date-time"/>
        <field name="sequenceNum" type="number-integer"/>
        <field name="reason" type="text-long"/>
        <field name="quantity" type="number-decimal"/>
        <field name="scrapFactor" type="number-decimal"/>
        <field name="instruction" type="text-long"/>
        <field name="routingWorkEffortId" type="id"/>
        <relationship type="one" related-entity-name="ProductAssocType">
            <key-map field-name="productAssocTypeId"/>
        </relationship>
        <relationship type="one" related-entity-name="Product"/>
        <relationship type="one" title="To" related-entity-name="Product">
            <key-map field-name="toProductId"/>
        </relationship>
        <relationship type="one" title="Routing" related-entity-name="WorkEffort">
