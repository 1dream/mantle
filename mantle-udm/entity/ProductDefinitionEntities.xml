        <relationship type="one" related-entity-name="CustomMethod">
            <key-map field-name="costCustomMethodId"/>
        </relationship>
    </entity>
    <entity entity-name="ProductCostComponentCalc" package-name="mantle.product.cost">
        <field name="productId" type="id" is-pk="true"/>
        <field name="costComponentTypeId" type="id" is-pk="true"/>
        <field name="fromDate" type="date-time" is-pk="true"/>
        <field name="costComponentCalcId" type="id"/>
        <field name="sequenceNum" type="number-integer"/>
        <field name="thruDate" type="date-time"/>
