        <field name="productAverageCostId" type="id" is-pk="true"/>
        <field name="averageCostTypeEnumId" type="id"/>
        <field name="organizationPartyId" type="id"/>
        <field name="productId" type="id"/>
        <field name="facilityId" type="id"/>
        <field name="fromDate" type="date-time"/>
        <field name="thruDate" type="date-time"/>
        <field name="averageCost" type="number-decimal"/>
        <relationship type="one" title="AverageCostType" related-entity-name="Enumeration">
            <key-map field-name="averageCostTypeEnumId"/>
        </relationship>
        <relationship type="one" title="Organization" related-entity-name="Party">
            <key-map field-name="organizationPartyId"/>
        </relationship>
        <relationship type="one" related-entity-name="Product"/>
        <relationship type="one" related-entity-name="Facility"/>
    </entity>

