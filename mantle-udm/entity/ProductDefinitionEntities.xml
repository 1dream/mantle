            <key-map field-name="dimensionTypeEnumId"/>
        </relationship>
    </entity>
    <entity entity-name="ProductGeo" package-name="mantle.product.product">
        <field name="productId" type="id" is-pk="true"/>
        <field name="geoId" type="id" is-pk="true"/>
        <field name="productGeoEnumId" type="id"/>
        <field name="description" type="text-long"/>
        <relationship type="one" related-entity-name="Product"/>
        <relationship type="one" related-entity-name="Geo"/>
        <relationship type="one" related-entity-name="Enumeration">
            <key-map field-name="productGeoEnumId"/>
        </relationship>
    </entity>
