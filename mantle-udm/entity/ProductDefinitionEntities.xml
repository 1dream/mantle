            <key-map field-name="productId"/>
        </relationship>
        <relationship type="one" related-entity-name="CostComponentType">
            <key-map field-name="costComponentTypeId"/>
        </relationship>
        <relationship type="one" related-entity-name="CostComponentCalc">
            <key-map field-name="costComponentCalcId"/>
        </relationship>
    </entity>
    <entity entity-name="ProductAverageCost" package-name="mantle.product.cost">
