    <!-- ========================== -->
    <!-- Tax Calculation Interfaces -->
    <!-- ========================== -->

    <service verb="calculate" noun="SalesTax" type="interface">
        <in-parameters>
            <parameter name="referenceId"><description>This is the orderId or invoiceId, if available.</description></parameter>
            <parameter name="saveResults" type="Boolean"><description>If the tax service supports saving calculated
                taxes for reporting and filing with authorities set this flag when you want the results saved (this is
                usually done for invoices).</description></parameter>
            <parameter name="taxGatewayConfigId" required="true"/>
            <parameter name="customerPartyId"/>
            <parameter name="organizationPartyId"/>
            <parameter name="originAddressContactMechId"/>
            <parameter name="destinationAddressContactMechId"/>
            <parameter name="items" type="List">
                <subtype type="Map">
                    <subtype key="itemId" type="String"/>
                    <subtype key="quantity" type="BigDecimal"/>
                    <subtype key="chargedAmount" type="BigDecimal"/>
                    <subtype key="productId" type="String"/>
                    <subtype key="taxCode" type="String"/>
                    <subtype key="discounts" type="List"><subtype type="Map">
                        <subtype key="discountAmount" type="BigDecimal"/>
                        <subtype key="discountCode" type="String"/>
                    </subtype></subtype>
                    <subtype key="originAddressContactMechId" type="String"/>
                    <subtype key="destinationAddressContactMechId" type="String"/>
                </subtype>
            </parameter>
        </in-parameters>
        <out-parameters>
            <parameter name="taxResults" type="List">
                <subtype type="Map">
                    <subtype key="itemId" type="String"/>
                    <subtype key="taxAmount" type="BigDecimal"/>
                    <subtype key="taxRate" type="BigDecimal"/>
                    <subtype key="geoName" type="String"/>
                    <subtype key="authorityName" type="String"/>
                    <subtype key="taxName" type="String"/>
                </subtype>
            </parameter>
        </out-parameters>
    </service>
